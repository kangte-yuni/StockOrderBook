<UserControl x:Class="Client.Views.OrderBookPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="420" d:DesignHeight="400">

    <UserControl.Resources>
        <!-- Ask 용 템플릿-->
        <DataTemplate x:Key="AskRowTemplate">
            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="0">
                <Grid Margin="2,1">
                    <Grid.ColumnDefinitions>
                        <!-- 가격 -->
                        <ColumnDefinition Width="80"/>
                        <!-- 막대 -->
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <!-- 가격 + 퍼센트 표시 -->
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock
                    Text="{Binding Price, StringFormat=N2}"
                    FontFamily="Consolas"
                    VerticalAlignment="Center"
                    Margin="0,0,4,0"/>
                        <TextBlock
                    Text="{Binding PercentChange, StringFormat='{}{0:+0.00;-0.00;0.00}%'}"
                    FontFamily="Consolas"
                    FontSize="10"
                    Foreground="Red"
                    VerticalAlignment="Center"
                    Margin="0,1,4,0"/>
                    </StackPanel>
                    <!-- 파란 ProgressBar + 수량 텍스트 -->
                    <Grid Grid.Column="1">
                        <ProgressBar Value="{Binding Size}"
                       Maximum="200"
                       Height="16"
                       VerticalAlignment="Center"
                       FlowDirection="RightToLeft"
                       Foreground="Blue"/>
                        <TextBlock Text="{Binding Size}"
                     Foreground="White"
                     FontSize="10"
                     FontWeight="Bold"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Margin="2,0"/>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Bid 용 템플릿: 가격 | 빨간막대+수량 -->
        <DataTemplate x:Key="BidRowTemplate">
            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="0">
                <Grid Margin="2,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <!-- 가격 + 퍼센트 표시 -->
                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock
                    Text="{Binding Price, StringFormat=N2}"
                    FontFamily="Consolas"
                    VerticalAlignment="Center"
                    Margin="0,0,4,0"/>
                        <TextBlock
                    Text="{Binding PercentChange, StringFormat='{}{0:+0.00;-0.00;0.00}%'}"
                    FontFamily="Consolas"
                    FontSize="10"
                    Foreground="Blue"
                    VerticalAlignment="Center"
                    Margin="0,1,4,0"/>
                    </StackPanel>
                    <Grid Grid.Column="1">
                        <ProgressBar Value="{Binding Size}"
                       Maximum="200"
                       Height="16"
                       VerticalAlignment="Center"
                       FlowDirection="RightToLeft"
                       Foreground="Red"/>
                        <TextBlock Text="{Binding Size}"
                     Foreground="White"
                     FontSize="10"
                     FontWeight="Bold"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     Margin="2,0"/>
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="4" Padding="5" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <!-- 헤더 -->
                <RowDefinition Height="Auto"/>
                <!-- Depth (Ask+line+Bid) -->
                <RowDefinition Height="220"/>
            </Grid.RowDefinitions>

            <!-- 헤더 -->
            <DockPanel Grid.Row="0" Margin="0,0,0,5">
                <TextBlock Text="{Binding Ticker}"
                           FontSize="16" FontWeight="Bold"
                           DockPanel.Dock="Left"/>
                <Button Content="Remove"
                        Command="{Binding RemovePanelCommand}"
                        Width="60"
                        DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- Depth 전체 -->
            <ScrollViewer x:Name="DepthScroll"
                          Grid.Row="1"
                          VerticalScrollBarVisibility="Visible">
                <StackPanel>
                    <!-- Ask 10단계 -->
                    <ItemsControl ItemsSource="{Binding Asks}"
                                  ItemTemplate="{StaticResource AskRowTemplate}"/>
                    <!-- Bid 10단계 -->
                    <ItemsControl ItemsSource="{Binding Bids}"
                                  ItemTemplate="{StaticResource BidRowTemplate}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
